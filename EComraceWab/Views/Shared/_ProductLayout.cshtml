    function Oders() {
        debugger
        let url_str = window.location.href;
        let url = new URL(url_str);
        let search_params = url.searchParams;

        let id = search_params.get('Id');
        var token = sessionStorage.getItem('Token');
        $.ajax({
            headers: {
                Authorization: `Bearer ` + token
            },
            url: '/Home/SallerHomeData?id='+id,
            success: function (response) {
                console.log(response);
                debugger
                var Message = response.StoreRoomChats.length;
                if(Message != 0){
                     $("#Messages").append(Message);
                }else{
                     $("#Messages").hide();
                }
                var Pending = response.Pending.length;
                if (Pending != 0) {
                      $("#PendingOders").append(Pending);
                } else {
                    $("#PendingOders").hide();
                }
                var Shipping = response.Shipping.length;
                 if(Shipping != 0){
                   $("#Shipping").append(Shipping);
                }else{
                     $("#Shipping").hide();
                }
                var Waiting = response.Waiting.length;
                 if(Waiting != 0){
                     $("#Waiting").append(Waiting);
                }else{
                     $("#Waiting").hide();
                }
                var Received = response.Received.length;
                if (Received != 0) {
                     $("#Receiving").append(Received);
                } else {
                    $("#Receiving").hide();
                }
          
              
               
              
               
                $("#Adminname").append(response.Admain.FirstName);
                $("#Monthly").append("RS." + response.Commission);
                var pendingPercentage = ((Pending / 100) * Pending + "%");
                var ShippingPercentage = ((Shipping / 100) * Shipping + "%");
                var WaitingPercentage = ((Waiting / 100) * Waiting + "%");
                var ReceivedPercentage = ((Received * 100) / Received + "%");
                $("#pendingPercentagevalue").append(pendingPercentage);
                $("#pendingPercentage").append("<div class='progress-bar bg-danger' role='progressbar' style='width:" + pendingPercentage + "' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100'></div>");
                $("#ShippingPercentagevalue").append(ShippingPercentage);
                $("#ShippingPercentage").append("<div class='progress-bar bg-warning' role='progressbar' style='width:" + ShippingPercentage + "'aria-valuenow='40'' aria-valuemin='0' aria-valuemax='100' > </div>");
                $("#WaitingPercentagevalue").append(WaitingPercentage);
                $("#WaitingPercentage").append("<div class='progress-bar' role='progressbar' style='width:" + WaitingPercentage + "' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100'></div>");
                $("#ReceiveingPercentagevalue").append(ReceivedPercentage);
                $("#ReceiveingPercentage").append("<div class='progress-bar bg-info' role='progressbar' style='width:" + ReceivedPercentage + "' aria-valuenow='50' aria-valuemin='0' aria-valuemax='100'></div>");
                $("#userDropdown").append("<img class='img-profile rounded-circle' src=" + response.Admain.Image + " >");

            }
        });
    }
